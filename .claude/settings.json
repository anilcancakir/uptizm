{
  "permissions": {
    "allow": [
      "Bash(dart analyze)",
      "Bash(dart format *)",
      "Bash(dart fix --apply)",
      "Bash(flutter test *)",
      "Bash(flutter pub get)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "WebFetch",
      "WebSearch",
      "mcp__sequential-thinking__*",
      "mcp__serena__*"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$TOOL_INPUT\" == *\".dart\"* ]]; then dart format $(echo \"$TOOL_INPUT\" | grep -oP '\"file_path\":\\s*\"\\K[^\"]+') 2>/dev/null; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "serena-integration@anilcancakir": false,
    "project-optimizer@anilcancakir": false,
    "pre-commit-flow@anilcancakir": false,
    "security-guidance@claude-plugins-official": true,
    "dart-lsp@anilcancakir": true,
    "claude-code-setup@claude-plugins-official": false
  }
}
